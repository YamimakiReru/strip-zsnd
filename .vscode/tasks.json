{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "args",
      "type": "promptString",
      "description": "Enter arguments",
      "default": "--help"
    }
  ],
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": ".venv/Scripts/python strip-zsnd.py --debug ${input:args}",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "web_dev",
      "dependsOn": ["web_dev_front", "sleep", "web_dev_py"]
    },
    {
      "label": "web_dev_front",
      "dependsOn": ["web_dev_css", "web_dev_js"]
    },
    {
      "hide": true,
      "label": "web_dev_py",
      "type": "shell",
      "command": ".venv/Scripts/python strip-zsnd.py --debug webui",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "hide": true,
      "label": "web_dev_js",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true
    },
    {
      "hide": true,
      "label": "web_dev_css",
      "type": "shell",
      "command": "npm run dev:css",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true
    },
    {
      "hide": true,
      "label": "sleep",
      "type": "shell",
      "command": "sleep 3"
    }
  ]
}
